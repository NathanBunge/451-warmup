<Window x:Class="Milesstone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milesstone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="600">
    <Grid>
        <Label x:Name ="statelabel" Content="State" HorizontalAlignment="Left" Margin="167,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontSize="14"/>
        <Label x:Name ="citylabel" Content="City" HorizontalAlignment="Left" Margin="167,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.521,2.028" FontSize="14"/>
        <DataGrid x:Name="businessgrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="76,153,24,45" SelectionChanged="businessgrid_SelectionChanged"/>
        <ComboBox x:Name="statelist" HorizontalAlignment="Left" Margin="266,34,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="statelist_SelectionChanged"/>
        <ComboBox x:Name="citylist" HorizontalAlignment="Left" Margin="266,93,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="citylist_SelectionChanged"/>

    </Grid>
</Window>
